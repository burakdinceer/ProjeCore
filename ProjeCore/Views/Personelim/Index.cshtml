@model List<Personel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br />


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonelID</td>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.Sehir</td>
            <td>@x.Birim.BirimAd</td>
            <td><a href="/Default/BirimSil/@x.PersonelID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Default/BirimGetir/@x.PersonelID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Default/BirimDetay/@x.PersonelID" class="btn btn-dark"> Detay</a></td>
        </tr>
    }


    

</table>

<a class="btn btn-danger" href="/Personelim/YeniPersonel">Yeni Personel Ekle</a>