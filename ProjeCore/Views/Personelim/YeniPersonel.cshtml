@model ProjeCore.Models.Personel
@{
    ViewData["Title"] = "YeniPersonel";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<h1>Yeni Departman Ekleme</h1>

<form method="post"> 
    <label asp-for="Ad">Personel Adı</label>
    <input asp-for="Ad" />

     <label asp-for="Soyad">Personel Soyadı</label>
    <input asp-for="Soyad" />

     <label asp-for="Sehir">Sehir</label>
    <input asp-for="Sehir" />

    @Html.DropDownListFor(x=>x.Birim.BirimID,(List<SelectListItem>)ViewBag.dgr,new {@class ="form-control"})

    <button>Yeni Birim Ekle</button>
</form>



